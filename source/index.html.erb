<section class="block pb-5 app-terminal" id="">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-10 text-center mb-2">
        <h1 class="mb-5 unbold col-md-9 mx-auto"><strong>Solidity Cookbook</strong> for Ethereum</h1>
        <div><em>A curated set of example code for common problems for solidity.</em></div>
        <p class="lead">Learn by example</p>
      </div>
    </div>
    <div class="row">
    </div>
  </div>
</section>

<section class="block pb-5 pt-0 " id="">
  <div class="container">
    <dl class="col-lg-10 text-center">
      <% blog.articles.each do |item| %>
        <a class="row nohover" href="<%= item.url %>">
          <dt class="col-sm-3 text-dark"><span class="align-middle"><u><%= item.data.short_title || item.title %></u></span></dt>
          <dd class="col-sm-9">
            <pre style=""><code class="solidity"><%= item.data.brief %></code></pre>          
          </dd>
        </a>
      <% end %>        
    </dl>
  </div>
</section>

<section class="block text-center bg-warning">
<div class="container-fluid">
  <p class="">
    Learn to Code Ethereum DApps By Building Your Own Game <strong>Now</strong>!
  </p>
  <div class="">
    <a href="https://cryptozombies.io" class="manual-optin-trigger btn btn-danger mb-3 mx-1" target="_blank">Get Started Now</a>
  </div>
</div>
</section>
